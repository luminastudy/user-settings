{
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}",
    "requireBranch": "main",
    "requireCleanWorkingDir": true
  },
  "github": {
    "release": true,
    "releaseName": "v${version}",
    "releaseNotes": null
  },
  "npm": {
    "publish": true,
    "access": "public"
  },
  "hooks": {
    "before:init": ["pnpm run test"],
    "after:bump": ["pnpm run build"]
  },
  "plugins": {
    "@release-it/keep-a-changelog": {
      "filename": "CHANGELOG.md",
      "addUnreleased": true,
      "strictLatest": false
    }
  }
}
