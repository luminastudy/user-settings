{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "User Settings",
  "description": "Schema for user settings configuration",
  "type": "object",
  "properties": {
    "language": {
      "type": "string",
      "description": "User interface language",
      "enum": ["he", "en"],
      "default": "en"
    },
    "degreeId": {
      "type": ["string", "null"],
      "description": "User's registered degree identifier",
      "default": null
    },
    "institutionId": {
      "type": ["string", "null"],
      "description": "User's registered institution identifier",
      "default": null
    },
    "degreeTitle": {
      "type": ["string", "null"],
      "description": "User's registered degree title/name",
      "default": null
    },
    "fontFamily": {
      "type": ["string", "null"],
      "description": "Preferred font family for UI",
      "default": null
    },
    "shuffleQuestions": {
      "type": "boolean",
      "description": "Whether to shuffle questions in quizzes",
      "default": false
    },
    "devMode": {
      "type": "boolean",
      "description": "Developer mode flag",
      "default": false
    }
  },
  "required": ["language"],
  "additionalProperties": false
}
